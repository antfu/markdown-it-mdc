{
  "name": "markdown-it-mdc",
  "type": "module",
  "version": "0.2.5",
  "packageManager": "pnpm@10.12.4",
  "description": "Markdown Components (MDC) support for markdown-it",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/antfu",
  "homepage": "https://github.com/antfu/markdown-it-mdc#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/markdown-it-mdc.git"
  },
  "bugs": "https://github.com/antfu/markdown-it-mdc/issues",
  "keywords": [
    "markdown",
    "markdown-it-plugin"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "release": "bumpp && pnpm publish",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@types/markdown-it": "*",
    "markdown-it": "^14.0.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.2",
    "@antfu/ni": "^25.0.0",
    "@antfu/utils": "^9.2.0",
    "@mdit-vue/plugin-component": "^2.1.4",
    "@mdit-vue/plugin-frontmatter": "^2.1.4",
    "@types/js-yaml": "^4.0.9",
    "@types/markdown-it-container": "^2.0.10",
    "@types/node": "^24.0.10",
    "bumpp": "^10.2.0",
    "eslint": "^9.30.1",
    "lint-staged": "^16.1.2",
    "markdown-it": "^14.1.0",
    "markdown-it-container": "^4.0.0",
    "markdown-it-task-checkbox": "^1.0.6",
    "pnpm": "^10.12.4",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
